@model List<TelesalesSchedule.Models.Schedule>

@{
    ViewBag.Title = "Previous Week";
}

@{var n = 0;}

<div>
    <div>
        <h2>Computers Schedule - @ViewBag.StartDate - @ViewBag.EndDate</h2>
        <hr />
        <div class="">
            @Html.ActionLink("Next Week", "Index", "Home", null, new { @class = "btn btn-sm btn-success pull-right" })
        </div>

