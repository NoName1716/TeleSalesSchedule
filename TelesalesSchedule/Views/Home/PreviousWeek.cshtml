            <thead>
                <tr class="success">
                    <th>Day</th>
                    <th colspan="3" class="text-center">Monday</th>
                    <th colspan="3" class="text-center">Thuesday</th>
                    <th colspan="3" class="text-center">Wednesday</th>
                    <th colspan="3" class="text-center">Thursday</th>
                    <th colspan="3" class="text-center">Friday</th>
                    <th colspan="3" class="text-center">Saturday</th>
                    <th colspan="3" class="text-center">Sunday</th>
                </tr>
