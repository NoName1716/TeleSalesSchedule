                    <td>9-13</td>
                    <td>13-17</td>
                    <td>17-21</td>
                    <td>9-13</td>
                    <td>13-17</td>
                    <td>17-21</td>
                    <td>9-13</td>
                    <td>13-17</td>
                    <td>17-21</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var pc in Model)
            {

                if (n % 2 == 0)
                {
                        @:<tr class="alert-active">
                            }
                    else
                    {
                        @:<tr>
                            }

                    <td>@pc.Computer.Name</td>

                    if (@pc.MondayShiftOneEnd == 13)
                    {
                        <td bgcolor="#FF0000" class="text-center">Full</td>
                    }
                    else
                    {
                        <td class="text-center">Free</td>
                    }
                    if (@pc.MondayShiftTwoEnd == 17)
                    {
                        <td bgcolor="#FF0000" class="text-center">Full</td>
                    }
                    else
                    {
                        <td class="text-center">Free</td>
                    }
                    if (@pc.MondayShiftThreeEnd == 21)
                    {
                        <td bgcolor="#FF0000" class="text-center">Full</td>
                    }
                    else if (@pc.MondayShiftThreeEnd == 18)
                    {
