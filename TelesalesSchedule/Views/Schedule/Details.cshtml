@model TelesalesSchedule.Models.ViewModels.ScheduleView

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="well">
        <h2>Schedule from <span style="font-size: 30px; font-style: italic">@Model.StartDate</span> to <span style="font-size: 30px; font-style: italic">@Model.EndDate</span> <span class="pull-right"  style="font-size: 30px; color: orangered">@Model.Hours hours</span></h2>
        @using (Html.BeginForm("Details", "Schedule", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>#</th>
                        <th>Day of Week</th>
                        <th>Shift Start</th>
                        <th>Shift End</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                        <td>1</td>
                        <td>Monday</td>
                        <td>@Model.MondayStart</td>
                        <td>@Model.MondayEnd</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Thuesday</td>
                        <td>@Model.ThuesdayStart</td>
                        <td>@Model.ThuesdayEnd</td>
                    </tr>
                    <tr class="active">
                        <td>3</td>
                        <td>Wednesday</td>
                        <td>@Model.WednesdayStart</td>
                        <td>@Model.WednesdayEnd</td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Thursday</td>
                        <td>@Model.ThursdayStart</td>
                        <td>@Model.ThursdayEnd</td>
                    </tr>
                    <tr class="active">
                        <td>5</td>
                        <td>Friday</td>
                        <td>@Model.FridayStart</td>
                        <td>@Model.FridayEnd</td>
                    </tr>
                    <tr>
                        <td>6</td>
                        <td>Saturday</td>
                        <td>@Model.SaturdayStart</td>
                        <td>@Model.SaturdayEnd</td>
                    </tr>
                    <tr class="active">
                        <td>7</td>
                        <td>Sunday</td>
                        <td>@Model.SundayStart</td>
                        <td>@Model.SundayEnd</td>
                    </tr>
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Edit", "Edit", "Schedule", new { @id = Model.Id }, new { @class = "btn btn-success" })
                    @if (this.User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Back", "ListAll", "Schedule", null, new { @class = "btn btn-info" })
                    }
                    else
                    {
                        @Html.ActionLink("Back", "ListMySchedules", "Schedule", null, new { @class = "btn btn-info" })
                    }
                </div>
            </div>
        }
    </div>
</div>


