                    @Html.DropDownListFor(m => m.SundayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.SundayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <input type="submit" value="Edit" class="btn btn-success" />
                    @if (this.User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Cancel", "ListAll", "Schedule", null, new { @class = "btn btn-info" })
                    }
                    else
                    {
                        @Html.ActionLink("Cancel", "ListMySchedules", "Schedule", null, new { @class = "btn btn-info" })
                    }
                </div>
            </div>
