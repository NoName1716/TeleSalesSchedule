<div class="container">
    <div class="well">
        <h2>Edit Schedule</h2>
        @using (Html.BeginForm("Edit", "Schedule", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <p style="text-align:center;" class="text-danger">@ViewBag.ErrorMessage</p>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.MondayError</p>
                @Html.Label("Monday", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.MondayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.MondayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.ThuesdayError</p>
                @Html.Label("Thuesday", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.ThuesdayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.ThuesdayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.WednesdayError</p>
                @Html.Label("Wednesday", new { @class = "control-label col-sm-4" })
