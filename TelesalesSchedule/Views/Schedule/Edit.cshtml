                    @Html.DropDownListFor(m => m.WednesdayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.WednesdayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.ThursdayError</p>
                @Html.Label("Thursday", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.ThursdayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.ThursdayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.FridayError</p>
                @Html.Label("Friday", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.FridayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.FridayEnd, hoursList, new { @style = "color : black" })
                </div>
            </div>
            <div class="form-group">
                <p style="text-align:center;" class="text-danger">@ViewBag.SaturdayError</p>
                @Html.Label("Saturday", new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.SaturdayStart, hoursList, new { @style = "color : black" })
                    @Html.DropDownListFor(m => m.SaturdayEnd, hoursList, new { @style = "color : black" })
                </div>
