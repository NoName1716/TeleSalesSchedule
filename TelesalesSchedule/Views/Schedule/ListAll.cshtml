@model List<TelesalesSchedule.Models.Schedule>

@{
    ViewBag.Title = "ListAll";
}

<div class="container">
    <div class="well">
        <h2>Schedules</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>Working Hours</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.Id</td>
                        <td>@schedule.StartDate.Date</td>
                        <td>@schedule.EndDate.Date</td>
                        <td>@schedule.Hours</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Schedule", new { @id = schedule.Id }, null)
                            @Html.ActionLink("Delete", "Delete", "Schedule", new { @id = schedule.Id }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


