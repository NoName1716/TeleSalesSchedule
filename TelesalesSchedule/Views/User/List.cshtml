@model List<TelesalesSchedule.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

@{var n = 0;}

<div class="container">
    <div class="well">
        <h2>Users</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>ID</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    if (n % 2 == 0)
                    {
                        @:<tr class="active">
                    }
                    else
                    {
                        @:<tr>
                    }

                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id }, null)
                        @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, null)
                    </td>

                    n++;
                }
            </tbody>
        </table>
    </div>
</div>
